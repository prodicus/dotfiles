# Create a new directory and enter it
function mkd() {
    mkdir -p "$@" && cd "$_";
}

# Convert markdown to restructured text using pandoc
function md2rst() {
    fullname="$1"
    filename="${fullname%.*}"
    rstname="${filename}.rst"
    pandoc --from=markdown --to=rst --output=`echo $rstname` "$1"
}

# Convert reStructured text to Markdown using pandoc
function rst2md() {
    fullname="$1"
    filename="${fullname}%.*"
    mdname="${filename}.md"
    pandoc --from=rst --to=markdown --output=`echo $mdname` "$1"
}

# Determine size of a file or total size of a directory
function fs() {
    if du -b /dev/null > /dev/null 2>&1; then
        local arg=-sbh;
    else
        local arg=-sh;
    fi
    if [[ -n "$@" ]]; then
        du $arg -- "$@";
    else
        du $arg .[^.]* *;
    fi;
}

# Use Git’s colored diff when available
hash git &>/dev/null;
if [ $? -eq 0 ]; then
    function diff() {
        git diff --no-index --color-words "$@";
    }
fi;

